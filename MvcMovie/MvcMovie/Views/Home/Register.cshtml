@{
    ViewData["Title"] = "Register";
}

@model User

<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-md-8 mx-auto rounded border p-3">
            <h2 class="text-center mb-3">Register</h2>

            <form method="post">
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Fullname</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="FullName" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Email" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Username</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Username" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Password</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" asp-for="Password" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Role</label>
                    <div class="col-sm-8">
                        <select class="form-select" asp-for="Role">
                            <option value="Developer">Developer</option>
                            <option value="Admin">Admin</option>
                            <option value="Editor">Editor</option>
                            <option value="Member">Member</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary mb-3" asp-controller="Home" asp-action="Login">Submit</button>
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Register">Register Here</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>