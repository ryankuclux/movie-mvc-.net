@{
    ViewData["Title"] = "Edit Movie";
}

@model Movie

<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-md-8 mx-auto rounded border p-3">
            <h2 class="text-center mb-3">Edit Movie</h2>

            <form method="post">
                @Html.AntiForgeryToken()

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Id</label>
                    <div class="col-sm-8">
                        <input class="form-control-plaintext" asp-for="Id" readonly/>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Title</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Title"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Description</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Description"/>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Release Date</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="ReleaseDate"/>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Rating</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Rating"/>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Poster</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Poster"/>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Video</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Video"/>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Genre</label>
                    <div class="col-sm-8">
                        <select class="form-select" asp-for="GenreId">
                            @if (ViewBag.Genres is List<Genre> genres)
                            {
                                @foreach (var genre in genres)
                                {
                                    <option value="@genre.Id">@genre.Name</option>
                                }
                            }
                            else
                            {
                                <option disabled>No genre available!</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="offset-sm-4 col-sm-4 d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="col-sm-4 d-grid">
                        <a class="btn btn-outline-danger" asp-controller="Movies" asp-action="Index" role="button">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>