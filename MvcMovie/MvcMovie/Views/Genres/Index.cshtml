@{
    ViewData["Title"] = "Table Genres";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Genre>

<div class="container" style="margin-top: 100px;">
    <h2 class="text-center mb-5">List of Genres</h2>

    <div class="row mb-2">
        <div class="col">
            <a class="btn btn-primary mx-3" asp-controller="Genres" asp-action="Add">New Genre</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr style="white-space: nowrap">
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.Id</td>
                    <td>@genre.Name</td>
                    <td>@genre.Description</td>
                    <td style="white-space: nowrap">
                        <form method="post" asp-controller="Genres" asp-action="Delete" asp-route-id="@genre.Id" onsubmit="return confirm('Are you sure you want to delete this genre?');">
                            <a class="btn btn-primary btn-sm" asp-controller="Genres" asp-action="Update" asp-route-id="@genre.Id">Edit</a>
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>